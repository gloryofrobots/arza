import affirm

generic _and_
| t of True, f of True -> true
| a1 of Any, a2 of Any -> false
--------------------------------------------------

specify _and_
| i of Int i of Float -> #_and_i_f
--------------------------------------------------

specify _and_
| i of String, i of Int -> #_and_s_i
--------------------------------------------------

fun test () ->
    affirm:is_equal (_and_ true true) true
    affirm:is_equal (_and_ true false) false
    affirm:is_equal (_and_ false true) false
    affirm:is_equal (_and_ #ss []) false
    affirm:is_equal (_and_ "str" 1) #_and_s_i
    affirm:is_equal (_and_ 1 1.02) #_and_i_f
--------------------------------------------------

