func Timer_New(start_time):
    [start_time, nil, nil, nil] isa  Timer

func start():
    Timer(time()) end

generic stop:
    (self of Timer):
        self[1] = time()
        self[2] = self[1] - self[0]
        self[3] = self[2] * 1000
        self[3] end

    (self of Timer, showInfo of True):
        stop(self)
        info(self)
        self[3] end
end

generic info(self of Timer):
//    print("elapsed",self[2],"seconds",self[3],"milliseconds") end
    print("elapsed", self[3], "milliseconds") end

