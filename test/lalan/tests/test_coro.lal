fun test_simple () =
    let co =
        coro:spawn(
             (yield, x) ->
                let _co1 =
                    coro:spawn(
                         (yield2, y) ->
                            let
                                fun send() = yield2(42 + y)
                            in  send()
                    )
                in
                (
                   affirm:is_equal(x, 23)

                   let
                        x1 = yield(_co1(x))
                        x2 = yield(x1)
                   in
                   (
                       affirm:is_equal(x1, 34)
                       affirm:is_equal(x2, 44)
                       x2
                   )
                )
        )
    in
    (
        affirm:is_equal(co(23), 65)
        affirm:is_equal(co(34), 34)
        affirm:is_equal(co(44), 44)
    )



fun test_seq (enum) =
    let
        fun filter(predicate, coll) =
            coro:spawn(
                fun (yield) =
                    let
                        fun _filter
                            | (p, []) = empty(coll)
                            | (p, x::xs) =
                                if p(x) then
                                (
                                    yield(x)
                                    _filter(p, xs)
                                )
                                else _filter(p, xs)

                     in _filter(predicate, coll)
            )

        fun map2(fn, sq) =
            let
                fun _wrap_map (yield) =
                    let fun _map
                        | (f, []) = empty(sq)
                        | (f, x::xs) =
                        (
                            yield(f(x))
                            _map(f, xs)
                        )
                    in _map(fn, sq)
            in coro:spawn(_wrap_map)

        fun map(fn, sq) =
            coro:spawn(
                fun (yield) =
                    seq:foreach(
                        fun (x) = yield(fn(x)),
                        sq
                    )
            )

        fun drop(count, sq) =
            coro:spawn(
                fun (yield) =
                    let fun _drop
                            | (_, []) =
                                empty(sq)
                            | (0, s) =
                                seq:traverse(map(yield, s))
                            | (n, x::xs) =
                                _drop(n-1, xs)

                    in _drop(count, sq)
            )

        fun each(sq) =
            coro:spawn(
                fun (yield) =
                    (fun | [] = empty(sq)
                         | s = seq:traverse(
                                 map(yield, s)
                               )
                    )(sq)

            )
