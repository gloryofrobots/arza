use
    String as Str
    Symbol as Sym
in
(
    def ++ (s1 of Str, s2 of Str) = _string:concat(s1, s2)
    def ++ (s1 of Str, s2 of Sym) = _string:concat(s1, str(s2))
    def ++ (s1 of Sym, s2 of Str) = _string:concat(str(s1), s2)
    def ++ (s1 of Sym, s2 of Sym) = symbol(_string:concat(str(s1), str(s2)))
)


derive (Eq, Displayed) for (Symbol, Char)


derive Concatable for Symbol


derive (Eq, Displayed,
       Sized, Collection,
       Prependable, Appendable, Concatable, Consable,
       Seqable, Sliceable, Emptiable) for String


fun concat (str1 of String, str2 of String) =
    _string:concat(str1, str2)


fun replace_first (_old of String, _new of String, _str of String) =
    _string:replace_first(_old, _new, _str)


fun replace (_old of String, _new of String, _str of String) =
    _string:replace(_old, _new, _str)


fun reverse(_str) = _string:reverse(_str)


fun joiner(_func, _sep) =
    (s, acc) ->
        if acc != "" then
            acc ++ _sep ++  _func(s)
        else
            _func(s)

fun join(_coll, _str) =
    let _seq = to_seq(_coll)
    in seq:foldl(joiner(identity, _str), "", _seq)

fun join_cast(_coll, _str) =
    let _seq = to_seq(_coll)
    in seq:foldl(joiner(str, _str), "", _seq)

fun join_with(_func, _coll, _str) =
    seq:foldl(joiner(_func, _str), "", _coll)

fun split(_sep, _str) = _string:split(_sep, _str)

