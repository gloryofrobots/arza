def to_seq(self of Array) = ArraySeq(self, 0)

fun map (f, arr of Array) =
    let
        size = len(arr)
        fun _map
            | (index, result) when index >= size = result
            | (index, result) =
                _map(
                    index + 1,
                    append(f(arr.[index]), result)
                )
    in
        _map(0, array())
