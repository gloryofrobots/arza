type
    ArraySeq (arr, index)
    ArraySeqEmpty()

trait TArraySeq(A) for ArraySeq =
    def first(self of A) = self.arr.index

    def rest({arr, index} of A) =
        let
            l = len(arr) - index
        in
            if l <= 0 then
                ArraySeqEmpty()
            else
                ArraySeq(arr, index + 1)


    def is_empty({arr} of A) = arr.index >= len(arr)

    def empty(self of A) = ArraySeqEmpty()

    def len({arr, index} of A) =
        let
            l = len(arr) - index
        in
            if l < 0 then 0
            else l


describe ArraySeq as (Seq, Sized, Emptiable)

