import affirm

type L(l)
type Nil
type Some(val)

interface =
    fun eq(self, other)

trait(T) for L =
    def len(self of T) = len(self.l)

    def is_empty(self of T) = is_empty(self.l)

    def first(self of T) = self

    def rest(self of T) = self


def eq (self of Some, val of Some) = val == Nil
def eq (self of Some, _) = False

