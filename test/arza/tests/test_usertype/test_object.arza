import io
import affirm

type Object(data)

fun new(data) =
    Object(data)

def at(obj of Object , key) =
    let
        slot = __at__(obj, #data).[key]
    in
        match slot
            | method of Function =
                fun (...args) = method(...prepend(obj, args))
            | _ = slot

def put(obj of Object, key, val) =
    let
        data = __at__(obj, #data)
    in Object(data.{(key) = val})

fun test() =
    let
        o = new({
            f = (fun(self, x) =
                self.get_x() + x
            ),
            get_x = (self) -> self.x,
            x = 24
        })
        o1 = o.{x = -24, f=((self,x) -> @(x) + 100)}
    in
        affirm:is_equal(o.f(24), 48)
        affirm:is_equal(o1.f(24), 100)
        affirm:is_equal(o1.get_x(), -24)

