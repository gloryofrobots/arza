fun map[seq](seq, fn)
   | [], fn = empty(seq)
   | x::xs, fn = fn(x) :: map(xs, fn)

def seq:map[List](self, fn)
   | [], fn = empty(self)
   | x::xs, fn = fn(x) :: map(xs, fn)



fun remove_creature(game, {id}) =
    io:print("REMOVE")
    game.{
        creatures = del(@, id)
    }

